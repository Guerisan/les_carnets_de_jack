{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Connexion / Inscription {% endblock %}

{% block bodyClass %}user_form{% endblock %}
{% block body %}
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

            <label for="inputUsername" class="sr-only">Votre pseudo</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                   placeholder="Pseudo" required autofocus>
            <label for="inputPassword" class="sr-only">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="**********"
                   required>

            <div class="remember_wrapper">
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                <label for="remember_me">Rester connecté</label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button>
        </form>
        <p class="invitation">Pas encore de compte ? <a href="{{ path('app_register') }}">Rejoignez l'équipage !</a></p>
    </div>
{% endblock %}
